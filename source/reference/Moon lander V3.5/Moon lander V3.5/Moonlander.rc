    PUSHBUTTON      "-", IDC_THRUSTDOWN, 63, 92, 51, 23
    LTEXT           "Fuel:", IDC_STATIC, 143, 80, 16, 8, SS_LEFT
    EDITTEXT        IDC_ELAPSED, 144, 57, 41, 18, ES_AUTOHSCROLL
    LTEXT           "seconds", IDC_STATIC, 189, 61, 28, 8, SS_LEFT
    LTEXT           "Mission Elapsed Time:", IDC_STATIC, 144, 43, 71, 8, SS_LEFT
